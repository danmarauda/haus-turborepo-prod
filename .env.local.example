# =============================================================================
# HAUS + Cortex Configuration
# =============================================================================
#
# Copy this file to .env.local and fill in your values
#

# -----------------------------------------------------------------------------
# Convex Backend
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CONVEX_URL=https://your-convex-deployment.convex.cloud
CONVEX_DEPLOYMENT=your-deployment-name

# -----------------------------------------------------------------------------
# Cortex Memory System
# -----------------------------------------------------------------------------
# Enable automatic embedding generation (requires OPENAI_API_KEY)
CORTEX_EMBEDDING=true

# Enable automatic fact extraction from conversations
CORTEX_FACT_EXTRACTION=true

# Enable Neo4j knowledge graph sync
CORTEX_GRAPH_SYNC=true

# -----------------------------------------------------------------------------
# OpenAI API (for embeddings and fact extraction)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key

# Model configuration (optional)
CORTEX_EMBEDDING_MODEL=text-embedding-3-small
CORTEX_FACT_EXTRACTION_MODEL=gpt-4o-2024-11-20

# -----------------------------------------------------------------------------
# Neo4j Knowledge Graph (Property ↔ Suburb ↔ Agent relationships)
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=haus-dev-password

# -----------------------------------------------------------------------------
# AI Services (for HAUS voice agent)
# -----------------------------------------------------------------------------
GOOGLE_GENERATIVE_AI_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: ElevenLabs for TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# -----------------------------------------------------------------------------
# Multi-tenancy (optional)
# -----------------------------------------------------------------------------
CORTEX_TENANT_ID=haus-prod
