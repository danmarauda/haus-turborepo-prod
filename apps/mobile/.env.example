# ============================================
# HAUS Mobile - Environment Variables
# Copy this file to .env.local and fill in your values
# ============================================

# --------------------------------------------
# REQUIRED: Convex Backend
# --------------------------------------------
# Get this from your Convex dashboard or dev server output
EXPO_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# --------------------------------------------
# REQUIRED: Supabase Authentication
# --------------------------------------------
# Get these from your Supabase project settings → API
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# --------------------------------------------
# OPTIONAL: RevenueCat (Subscriptions)
# --------------------------------------------
# Get these from RevenueCat dashboard → API Keys
# Required for premium subscription features
EXPO_PUBLIC_RC_IOS=appl_your_ios_key
EXPO_PUBLIC_RC_ANDROID=goog_your_android_key
EXPO_PUBLIC_RC_SUBSCRIPTION_NAME=premium

# --------------------------------------------
# OPTIONAL: Stripe (Payments)
# --------------------------------------------
# Get this from Stripe dashboard → Developers → API Keys
# Required for payment processing features
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# --------------------------------------------
# OPTIONAL: Sentry (Error Tracking)
# --------------------------------------------
# Get this from Sentry dashboard → Settings → Projects → DSN
# Required for error monitoring
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# --------------------------------------------
# OPTIONAL: LiveKit (Voice Features)
# --------------------------------------------
# Your LiveKit server URL (wss:// protocol)
# Required for voice chat features
EXPO_PUBLIC_LIVEKIT_URL=wss://your-livekit-server

# --------------------------------------------
# DEVELOPMENT ONLY
# --------------------------------------------
# JWT secret for local development (use strong secret in production)
EXPO_PUBLIC_JWT_SECRET=your-jwt-secret-min-32-characters-long

# Debug mode (shows additional logging)
EXPO_PUBLIC_DEBUG_MODE=true
