{
  "name": "@haus/mobile",
  "version": "1.0.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "dev:android": "expo start --android",
    "dev:ios": "expo start --ios",
    "dev:web": "expo start --web",
    "build": "tsc --noEmit",
    "build:web": "expo export",
    "build:mobile": "eas build --profile preview --platform all --non-interactive",
    "build:ios": "eas build --profile preview --platform ios",
    "build:android": "eas build --profile preview --platform android",
    "lint": "biome lint",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .expo node_modules"
  },
  "dependencies": {
    "@expo/metro-runtime": "~4.0.1",
    "@haus/backend": "workspace:*",
    "clsx": "^2.1.1",
    "convex": "^1.19.2",
    "expo": "~52.0.0",
    "expo-asset": "~11.0.5",
    "expo-constants": "~17.0.0",
    "expo-linking": "~7.0.0",
    "expo-router": "~4.0.0",
    "expo-secure-store": "~14.0.0",
    "expo-status-bar": "~2.0.0",
    "expo-updates": "~0.27.4",
    "lucide-react-native": "^0.469.0",
    "nativewind": "^4.1.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.9",
    "react-native-gesture-handler": "~2.20.0",
    "react-native-reanimated": "~3.16.0",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "react-native-web": "~0.19.13"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@types/react": "~18.3.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.4"
  }
}
